@model Voat.Data.Models.SubverseBan

<div id="container">
    <div id="about-main" class="content about-page" role="main">

        <h1>User ban management interface for: <a href="/v/@ViewBag.SubverseName">@ViewBag.SubverseName</a></h1>

        <br />
        <div class="alert alert-danger">Are you sure you want to remove this ban?</div>
        @Html.ValidationSummary()
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.LabelFor(x => x.UserName, "Username:", new { @class = "control-label col-md-2" })
            </dt>
            <dd>
                @Html.DisplayFor(model => model.UserName)
            </dd>
            <dt>
                @Html.LabelFor(x => x.CreatedBy, "Banned by:", new { @class = "control-label col-md-2" })
            </dt>
            <dd>
                @Html.DisplayFor(model => model.CreatedBy)
            </dd>
            <dt>
                @Html.LabelFor(x => x.CreationDate, "Banned on:", new { @class = "control-label col-md-2" })
            </dt>
            <dd>
                @Html.DisplayFor(model => model.CreationDate)
            </dd>
        </dl>

        @using (Html.BeginForm("RemoveBan", "SubverseModeration", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <br />
            <input type="submit" value="Remove ban" class="btn-whoaverse-medium" />
            <br /><br />
            @Html.ActionLink("Back to ban list", "subverseBans", new { subverse = Model.Subverse })
        }
    </div>
</div>
