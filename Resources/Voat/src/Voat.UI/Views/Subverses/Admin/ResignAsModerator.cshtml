@model Voat.Data.Models.SubverseModerator

<div id="container">
    <div id="about-main" class="content about-page" role="main">

        <h1>You are about to resign as moderator from: <a href="/v/@ViewBag.SubverseName">@ViewBag.SubverseName</a></h1>

        <br />
        <div class="alert alert-danger">Are you sure you want to resign as moderator from this subverse?</div>

        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.UserName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.UserName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Power)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Power)
            </dd>
        </dl>

        @using (Html.BeginForm("ResignAsModerator", "SubverseModeration", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <br />
            <input type="submit" value="Resign" class="btn-whoaverse-medium" />
            <br /><br />
            @Html.RouteLink("Back to subverse frontpage", Voat.Models.ROUTE_NAMES.SUBVERSE_INDEX, new { subverse = Model.Subverse }, null)
        }
    </div>
</div>
