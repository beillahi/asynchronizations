    <div class="spacer">
        <div class="sidebox">
            <a href="/random" class="btn-whoaverse btn-block">
                Random Subverse
            </a>
        </div>
    </div>
    <div class="spacer">
        <div class="sidebox">
            <a href="/randomnsfw" class="btn-whoaverse btn-block">
                Random NSFW Subverse
            </a>
        </div>
    </div>
    @if (VoatSettings.Instance.SetsEnabled)
    {
        <div class="spacer">
            <div class="sidebox">
                <a href="/discover/set" class="btn-whoaverse btn-block">
                    Explore Sets
                </a>
            </div>
        </div>
    }
    <div class="spacer spacersection">
        <div class="alert-h1">
            Most viewed in the past 24 hours
        </div>
        <div>
            @{
                @await Component.InvokeAsync("TopViewedSubmissions", null)
            }
        </div>
    </div>
    @if (VoatSettings.Instance.IsVoatBranded)
    {
        <div class="spacer">
            <div class="sidecontentbox ">
                
                <div class="sidecontentbox content">
                    <div class="title">
                        <h1 class="alert-h1">Unofficial Voat Mobile Apps</h1>
                    </div>
                    <p>
                        We love these apps!
                    </p>
                    <p>
                        Android: 
                        <br />
                        <a href="https://play.google.com/store/apps/details?id=com.SpaceMonkey.Boats">Boats for Voat</a>
                        <br/>
                        <a href="https://play.google.com/store/apps/details?id=net.pr0npaganda.appvoat&hl=en">Appvoat</a>
                    </p>
                    <p>iOS:
                        <br/>
                        <a href="https://voatify.com/">Voatify</a>
                    </p>
                    <br/>
                    <p>If you see another Voat apps in the wild, do let us know!</p>
                </div>
            </div>
        </div>
    }
    <div class="spacer">
        <div class="sidecontentbox ">
            @await Component.InvokeAsync("SidebarAd", new Voat.Domain.Models.DomainReference(Voat.Domain.Models.DomainType.Subverse, null))
        </div>
    </div>
