@using Voat.Models.ViewModels

<div class="side">

    @Html.Partial("_SearchBox", new SearchViewModel() { Sub = "" }, new ViewDataDictionary(ViewData))

    <div class="spacer">
        <a href="/submit?linkpost=true" class="btn-whoaverse btn-block contribute submit-link">
            Share a link
        </a>
    </div>
    <div class="spacer">
        <a href="/submit" class="btn-whoaverse btn-block contribute submit-text">
            Discuss
        </a>
    </div>
    <div class="spacer">
        <div class="sidebox">
            <a href="/v/all/top" class="btn-whoaverse btn-block contribute">
                Top Submissions
            </a>
        </div>
    </div>
    <div class="spacer">
        <div class="sidebox create">
            <a href="/subverses/create" class="btn-whoaverse btn-block">
                Create your own subverse
            </a>
        </div>
    </div>
    @if (VoatSettings.Instance.SignalrEnabled && VoatSettings.Instance.ChatEnabled)
    {
        <div class="spacer">
            <div class="sidebox">
                <a href="/chat/whatever" class="btn-whoaverse btn-block" target="_blank">
                    @VoatSettings.Instance.SiteName Chat
                </a>
            </div>
        </div>
    }
    <div class="spacer">
        <div class="sidebox">
            <a href="/discover" class="btn-whoaverse btn-block">
                Explore @VoatSettings.Instance.SiteName
            </a>
        </div>
    </div>
